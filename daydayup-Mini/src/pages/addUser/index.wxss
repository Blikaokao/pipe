/*button*/  
.btn {  
  width: 80%;  
  padding: 20rpx 0;  
  border-radius: 10rpx;  
  text-align: center;  
  margin: 40rpx 10%;  
  background: #000;  
  color: #fff;  
}  
  
/*mask*/  
.drawer_screen {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: #000;  
  opacity: 0.5;  
  overflow: hidden;  
}  
  
/*content*/  
.drawer_box {  
  width: 650rpx;  
  overflow: hidden;  
  position: fixed;  
  top: 50%;  
  left: 0;  
  z-index: 1001;  
  background: #FAFAFA;  
  margin: -150px 50rpx 0 50rpx;  
  border-radius: 30px;  
}  
.title-style {
  border-radius: 5px;
}
.drawer_title{  
  padding:30rpx;  
  font: 28rpx "microsoft yahei";  
  text-align: center; 
  
  background-color: #0899f99e;

}  
.drawer_title_1{
  border-right: 4rpx solid rgb(35, 209, 240);
  border-radius: 60rpx 0 0 60rpx;
}

.drawer_title_2{
  border-radius: 0 60rpx 60rpx 0;
}


.drawer_content {  
  height: 220rpx;  
  overflow-y: scroll; /*超出父盒子高度可滚动*/  
}  
  
.btn_ok{  
  margin-bottom: 10rpx;
  padding: 20rpx;  
  font: 40rpx "microsoft yahei";  
  text-align: center;  
  border-top: 2rpx solid #E8E8EA;  
  color: #0899f99e;  
  font-weight: bold;
}  
  
