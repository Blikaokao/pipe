<view class="searchbar">
  <view class="content">
    <image src="http://101.33.248.42:8051/group1/M00/00/00/rBEACmMvy5SAXEL8AAASYJ_rFOI823.png" class="search-icon"></image>
    <input 
      bindinput="handleInput"
      bindconfirm="handleConfirm"
      type="text"
      value="{{inputValue}}" 
      placeholder="{{placeholder}}" 
      class="input"
      confirm-type="search"
    ></input>
    <image
     wx:if="{{inputValue}}" 
     bindtap="handleDeleteClick"
     src="http://101.33.248.42:8051/group1/M00/00/00/rBEACmMvzCCAHFJMAAAazOc24k8990.png" 
     class="delete-icon"
    ></image>
  </view>
  <view wx:if="{{inputValue}}" bindtap="handleTextbtnClick" class="text-btn">取消</view>
</view>
