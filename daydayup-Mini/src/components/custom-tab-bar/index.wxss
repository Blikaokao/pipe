/* custom-tab-bar/index.wxss */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 48px;
  background: rgb(37, 149, 253);
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 1;
}

.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.33);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
  
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  z-index: 1;
}

.tab-bar-item cover-image {
  width: 27px;
  height: 27px;
  margin: 10rpx 0;
  z-index: 1;
}

.tab-bar-item cover-view {
  font-size: 12px;
  z-index: 1;
}

.big-circle {
  position: fixed;
  bottom: 32rpx;
  left: 305rpx;
  border-radius: 140rpx;
  width: 140rpx;
  height: 140rpx;
  background: white;
  z-index: 100;
}


.small-circle {
  position: fixed;
  bottom: 40rpx;
  left: 315rpx;
  border-radius: 120rpx;
  width: 120rpx;
  height: 120rpx;
  background-color: rgb(0, 140, 255);
  display: inline;
}

.img-plus-style {
  width: 120rpx;
  height: 120rpx;
}

 
.img-style {
  height: 35px;
  width: 35px;
  position: fixed;
  bottom: 42px;
  left: 342rpx;
  z-index: 2;
  opacity: 0;
}

.half-circle {
  width: 200px;
  height: 200px;
  border:1px solid rgba(255, 255, 255,0);
  background-color: rgba(255, 255, 255,0);
  position: fixed;
  bottom: -60px;
  left: 81px;
  z-index: 0;
  border-radius: 200px;
}
